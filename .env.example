# Environment Variables

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/policy_assistant

# Qdrant
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# OpenAI
OPENAI_API_KEY=

# SerpAPI (for internet search)
SERPAPI_API_KEY=

# Brave Search (alternative)
BRAVE_API_KEY=

# Application
APP_ENV=development
LOG_LEVEL=INFO

# Embedding Model
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
EMBEDDING_BATCH_SIZE=32
EMBEDDING_CHECKPOINT_INTERVAL=100

# Vector Store Settings
VECTOR_STORE_BATCH_SIZE=100
VECTOR_STORE_COLLECTION_PREFIX=policy_assistant

# Retrieval Settings
MAX_CHUNKS_PER_AGENT=20
RERANK_TOP_K=50
SEARCH_SCORE_THRESHOLD=0.5

# External Sources Whitelist
ALLOWED_DOMAINS=unesco.org,oecd.org,edu-gov.in,ncert.nic.in,ncte.gov.in
